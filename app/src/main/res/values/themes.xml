<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BizzbullIndiaProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BizzbullIndiaProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BizzbullIndiaProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BizzbullIndiaProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="LogoutButton" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="cornerRadius">@dimen/_7sdp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.01</item>
    </style>

    <dimen name="_11sdp">11dp</dimen>
    <dimen name="_7sdp">7dp</dimen>

    <!-- Base application theme. -->
    <style name="Theme.BizBullsIndia" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Splash screen theme. You should use it in your manifest file for your Splash Activity-->
    <style name="Launcher" parent="Theme.BizBullsIndia">
        <item name="android:windowBackground">@color/white</item> <!--Also available: @drawable:launcher_screen_with_background-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">#00000000</item>
    </style>
    <style name="fontlight" >
        <item name="android:fontFamily">@font/source_light</item>
        <item name="android:color">@color/heading</item>
    </style>
    <style name="fontregular" >
        <item name="android:fontFamily">@font/source_regular</item>
